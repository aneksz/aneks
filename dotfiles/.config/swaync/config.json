{
    "$schema": "/etc/xdg/swaync/configSchema.json",
    "style": "/home/igor/.config/swaync/style.css",
    "positionX": "right",
    "positionY": "top",
    "layer": "overlay",
    "control-center-layer": "top",
    "layer-shell": true,
    "cssPriority": "user",
    "control-center-margin-top": 12,
    "control-center-margin-bottom": 0,
    "control-center-margin-right": 12,
    "control-center-margin-left": 0,
    "notification-2fa-action": true,
    "notification-inline-replies": true,
    "notification-icon-size": 40,
    "notification-body-image-height": 240,
    "notification-body-image-width": 180,
    "notification-window-width": 280,
    "timeout": 6,
    "timeout-low": 3,
    "timeout-critical": 0,
    "fit-to-screen": false,
    "control-center-width": 360,
    "control-center-height": 800,
    "keyboard-shortcuts": true,
    "image-visibility": "when-available",
    "transition-time": 200,
    "hide-on-clear": false,
    "hide-on-action": true,
    "script-fail-notify": true,
    "widgets": [
        "label",
        "buttons-grid",
        "volume",
        "title",
        "notifications"
    ],
    "notification-visibility": {
        "spotify": {
            "state": "muted",
            "urgency": "Low",
            "app-name": "Spotify"
        }
    },
    "widget-config": {
        "title": {
            "text": "Notifications",
            "clear-all-button": true,
            "button-text": ""
        },
        "label": {
            "max-lines": 1,
            "text": "Notification Centre"
        },
        "volume": {
            "label": ""
        },
        "notifications": {
            "timeout": 5,
            "hide-on-clear": true,
            "hide-on-action": true
        },
        "buttons-grid": {
            "actions": [
                {
                    "label": "",
                    "command": "pamixer -t",
                    "type": "toggle"
                },
                {
                    "label": "",
                    "command": "blueberry",
                    "type": "toggle"
                },
                {
                    "label": "",
                    "command": "spotify"
                },
                {
                    "label": "",
                    "command": "systemctl reboot"
                },
                {
                    "label": "",
                    "command": "shutdown now"
                },
              
                {   "label": "󰉋",
                    "command": "nautilus"
                },
                
                {    "label": "",
                     "command": "steam"
                },
              
                {    "label": "",
                     "command": "kitty $HOME"
                }

        ]
    }
  }
}


